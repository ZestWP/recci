<h1>Listing leads</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Company</th>
      <th>Interested</th>
      <th>Status</th>
      <th>Source</th>
      <th>Comment</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
	  <%
	  status = Status.find_by_id(lead.status)
	  source = Source.find_by_id(lead.source)
	  interested = Interested.find_by_id(lead.interested)
	  
	  %>
        <td><%= lead.first_name %></td>
        <td><%= lead.last_name %></td>
        <td><%= lead.email %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.company %></td>
        <td><%= interested.try(:title) %></td>
        <td><%= status.try(:title) %></td>
        <td><%= source.try(:title) %></td>
        <td><%= lead.comment %></td>
        <td><%= lead.address %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead', new_lead_path %>
